<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unipd.elia.deltacore.ui.ManageExperimentsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_experiments_activity_tvHeader_text"
            android:layout_gravity="center_horizontal"
            android:textSize="14pt"/>

        <TextView
            android:id="@+id/fragment_manage_experiments_tvNoExperiments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:text="@string/fragment_manage_experiments_tvNoExperiments"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/manage_experiments_activity_listViewAvailableExperiments"
            />
    </LinearLayout>
</RelativeLayout>
